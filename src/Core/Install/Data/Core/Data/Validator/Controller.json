{
    "controller": {
        "validate": {
            "name" : [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex" : "^[a-zA-Z]+$^"
                    }
                },
            ],
            "extension" : [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex" : "^[a-z.]+$^"
                    }
                }
            ],
            "domain" : [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid" : true
                }
            ]
        }
}