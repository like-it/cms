{
    "view": {
        "validate": {
            "url": [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex": "^[a-zA-Z/]+$^"
                    }
                }
            ],
            "extension": [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex": "^[a-z.]+$^"
                    }
                },
                {
                    "in.array": [
                        ".tpl",
                        ".js",
                        ".css"
                    ]
                }
            ],
            "domain": [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid": true
                }
            ]
        }
    }
}