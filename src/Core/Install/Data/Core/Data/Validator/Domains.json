{
    "domain": {
        "validate": {
            "uuid" : [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid" : true
                }
            ],
            "host" : [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex" : "^[A-Za-z0-9_-]+$"
                    }
                }
            ],
            "extension" : [
                {
                    "string.length": ">=1"
                }
            ],
            "theme" : [
                {
                    "in.list.json" : {
                        "list" : "theme",
                        "url" : "{{config('project.dir.data')}}Theme.json"
                    }
                }
            ],
            "name" : [
                {
                    "is.unique.json" : {
                        "list" : null,
                        "url" : "{{config('project.dir.data')}}Host.json"
                    }
                }
            ]
        }
    }
}