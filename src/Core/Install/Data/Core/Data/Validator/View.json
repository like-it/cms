{
    "view": {
        "rename" : {
            "validate": {
                "name": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-zA-Z0-9.\/]+$^"
                        }
                    }
                ],
                "extension": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-z.]+$^"
                        }
                    },
                    {
                        "in.array": [
                            "tpl",
                            "js",
                            "css",
                            "json"
                        ]
                    }
                ]
            }
        },
        "put" : {
            "validate": {
                "name": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-zA-Z0-9.\/]+$^"
                        }
                    }
                ],
                "extension": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-z.]+$^"
                        }
                    },
                    {
                        "in.array": [
                            "tpl",
                            "js",
                            "css",
                            "json"
                        ]
                    }
                ],
                "domain": [
                    {
                        "string.length": "==36"
                    },
                    {
                        "is.uuid": true
                    }
                ]
            }
        }
    }
}