{
    "email": {
        "validate": {
            "uuid" : [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid" : true
                }
            ],
            "host" : [
                {
                    "string.length": ">=3"
                }
            ],
            "port" : [
                {
                    "string.has.number": ">=1"
                }
            ],
            "from.email" : [
                {
                    "is.email" : true
                }
            ],
            "username" : [
                {
                    "string.length": ">=1"
                }
            ],
            "password" : [
                {
                    "string.length": ">=8"
                },
                {
                    "string.has.number": ">=1"
                },
                {
                    "string.has.uppercase": ">=1"
                },
                {
                    "string.has.lowercase": ">=1"
                },
                {
                    "string.has.symbol" : ">=1"
                }
            ]
        }
    }
}