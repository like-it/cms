{
    "controller": {
        "validate": {
            "name": [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex": "^[a-zA-Z]+$^"
                    }
                }
            ],
            "extension": [
                {
                    "string.length": ">=1"
                },
                {
                    "string.contains": {
                        "regex": "^[a-z.]+$^"
                    }
                },
                {
                    "in.array": [
                        ".php"
                    ]
                }
            ],
            "domain": [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid": true
                }
            ]
        }
    }
}