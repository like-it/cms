{
    "domain": {
        "validate": {
            "uuid" : [
                {
                    "string.length": "==36"
                },
                {
                    "is.uuid" : true
                }
            ],
            "host" : [
                {
                    "string.length": ">=1"
                }
            ],
            "extension" : [
                {
                    "string.length": ">=1"
                }
            ],
            "theme" : [
                {
                    "in.array" : [
                        "default",
                        "blog"
                    ]
                }
            ],
            "name" : [
                {
                    "is.unique.json" : {
                        "list" : null,
                        "url" : "{{config('project.dir.data')}}Host.json"
                    }
                }
            ]
        }
    }
}