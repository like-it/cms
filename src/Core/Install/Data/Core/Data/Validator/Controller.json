{
    "controller": {
        "rename" : {
            "file" :  {
                "validate": {
                    "name": [
                        {
                            "string.length": ">=1"
                        },
                        {
                            "string.contains": {
                                "regex": "^[a-zA-Z0-9-_]+$^"
                            }
                        }
                    ],
                    "extension": [
                        {
                            "string.length": ">=1"
                        },
                        {
                            "string.contains": {
                                "regex": "^[a-z.]+$^"
                            }
                        },
                        {
                            "in.array": [
                                "php"
                            ]
                        }
                    ]
                }
            }
        },
        "put" : {
            "validate": {
                "name": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-zA-Z0-9-_]+$^"
                        }
                    }
                ],
                "extension": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-z.]+$^"
                        }
                    },
                    {
                        "in.array": [
                            "php"
                        ]
                    }
                ],
                "domain": [
                    {
                        "string.length": "==36"
                    },
                    {
                        "is.uuid": true
                    }
                ]
            }
        },
        "upload" : {
            "validate": {
                "name": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-zA-Z0-9.-_]+$^"
                        }
                    }
                ],
                "mimetype" : [
                    {
                        "in.array": [
                            "text/plain",
                            "text/x-php"
                        ]
                    }
                ],
                "extension": [
                    {
                        "string.length": ">=1"
                    },
                    {
                        "string.contains": {
                            "regex": "^[a-z.]+$^"
                        }
                    },
                    {
                        "in.array": [
                            "php"
                        ]
                    }
                ],
                "domain": [
                    {
                        "string.length": "==36"
                    },
                    {
                        "is.uuid": true
                    }
                ]
            }
        }
    }
}